---
import Layout from '@/layouts/PageLayout.astro';
import Header from '@/components/widgets/Header.astro';

import About from '@/components/landing/About.astro';
import BlogLatestPosts from '@/components/landing/BlogLatestPosts.astro';

const metadata = {
  title: 'kanjurer website',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      links={[
        { text: 'Home', href: '#' },
        { text: 'About', href: '#about' },
        { text: 'Resume', href: '#resume' },
        { text: 'Porfolio', href: '#porfolio' },
        { text: 'Blog', href: '#blog' },
        { text: 'Github', href: 'https://github.com/kanjurer' },
      ]}
      actions={[
        {
          text: 'Resume',
          href: '/resume-pdf',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>
  <About />
  <BlogLatestPosts />
</Layout>
